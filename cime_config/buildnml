  endif
  if ($BLOM_N_DEPOSITION == TRUE) then
    set NDEPFILE  = "'$DIN_LOC_ROOT/ocn/blom/bndcon/$NDEPFNAME'"
  else
    set NDEPFILE  = "''"
  endif
else if ($OCN_GRID == tnx1v4) then
